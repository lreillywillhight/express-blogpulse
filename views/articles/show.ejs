<h1><%= article.title %> <small>by <%= article.author.getFullName() %></small></h1>

<p>
  <strong><%= moment(article.createdAt).calendar() %></strong>
</p>

<p> <%= article.content %></p>


<hr />

<!-- </div> -->

<div class="commentSection">
  <% article.comments.forEach(comment => { %>
  <div class="comment">
    <p>
      <%= comment.dataValues.content %>
    </p>
    <br>
    <div class="commentNameDate">
      <p>
        <%= comment.dataValues.commenter_name %> - <%= moment(comment.dataValues.createdAt).calendar() %>
      </p>
    </div>
  </div>
  <%  }); %>

<br><br>

<form action="/articles/:id" method="POST">
  <label for="name">Name:</label>
  <input type="text" name="name" class="nameInput">
  <br>
  <label for="comment">Comment:</label>
  <input type="text" name="comment" class="commentInput">
  <br>

  <input type="submit">
</form>
